# Ushadow Default Deployment Configuration
# ONLY infrastructure and networking - everything else in config/config.defaults.yaml
# This file is version-controlled - create .env for local overrides

# ==========================================
# ENVIRONMENT & PROJECT
# ==========================================
COMPOSE_PROJECT_NAME=ushadow

# ==========================================
# PORTS
# ==========================================
BACKEND_PORT=8010
WEBUI_PORT=3010
PORT_OFFSET=10

# ==========================================
# DATABASES
# ==========================================
MONGODB_URI=mongodb://mongo:27017
MONGODB_DATABASE=ushadow
REDIS_URL=redis://redis:6379
REDIS_DATABASE=0
QDRANT_URL=http://qdrant:6333

# ==========================================
# NETWORKING
# ==========================================
CORS_ORIGINS=http://localhost:3010,http://127.0.0.1:3010,http://localhost:8010,http://127.0.0.1:8010,http://localhost:5173,http://127.0.0.1:5173
HOST_IP=localhost
VITE_BACKEND_URL=http://localhost:8010

# ==========================================
# NOTES
# ==========================================
# For application settings, API keys, and service configs, see:
#   - config/config.defaults.yaml (app defaults)
#   - config/config.local.yaml (local overrides)
#   - config/secrets.yaml (credentials)
