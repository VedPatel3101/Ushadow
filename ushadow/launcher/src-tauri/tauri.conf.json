{
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "devPath": "../dist",
    "distDir": "../dist",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "Ushadow",
    "version": "0.1.5"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true,
        "execute": true,
        "sidecar": false,
        "scope": [
          {
            "name": "docker",
            "cmd": "docker",
            "args": true
          },
          {
            "name": "docker-compose",
            "cmd": "docker",
            "args": ["compose", { "validator": "\\S+" }]
          },
          {
            "name": "tailscale",
            "cmd": "tailscale",
            "args": true
          },
          {
            "name": "open-url",
            "cmd": "open",
            "args": [{ "validator": "https?://.*" }]
          }
        ]
      },
      "process": {
        "all": false,
        "exit": true,
        "relaunch": true
      },
      "dialog": {
        "all": true
      },
      "notification": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.ushadow.launcher",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "macOS": {
        "minimumSystemVersion": "10.15",
        "exceptionDomain": "localhost",
        "signingIdentity": null,
        "entitlements": null
      },
      "windows": {
        "webviewInstallMode": {
          "type": "downloadBootstrapper"
        }
      },
      "deb": {
        "depends": ["docker.io", "tailscale"]
      }
    },
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-inline'; connect-src 'self' http://localhost:* ws://localhost:*; img-src 'self' data: http://localhost:*; style-src 'self' 'unsafe-inline'"
    },
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Ushadow",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "center": true,
        "visible": false
      }
    ]
  }
}
